    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test conf",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DDZ_A/bin/prefsum.out",
            "args": ["-m 2", "-n 9", "-t${workspaceFolder}/DDZ_A/bin/test.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "MPI+OMP debug build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "Experem conf",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DDZ_A/bin/prefsum",
            "args": ["-m 2", "-n 9"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "MPI+OMP debug build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}